<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.TaskDetailActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:text="@string/title"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskNameTxt"
        android:layout_width="383dp"
        android:layout_height="107dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:text="@string/task_name"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/taskBodyTxt"
        android:layout_width="380dp"
        android:layout_height="121dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:padding="10dp"
        android:text="@string/task_body"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/taskStateTxt"
        android:layout_width="377dp"
        android:layout_height="133dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:text="@string/task_state"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="20dp"
        android:text="@string/state"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskBodyTxt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="43dp"
        android:text="@string/body"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskNameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>